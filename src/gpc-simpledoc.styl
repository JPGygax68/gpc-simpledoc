.gpc-simpledoc-editor {

  position: relative;
  
  box-sizing: border-box;
  border: solid 1px rgba(0, 0, 0, 0.25);
  padding: 0.25em;
  outline: none;
  //height: 100%;
  min-height: 5em;
  //margin-left: 20%;
  //margin-right: 20%;
  font-family: sans-serif;
  background-color: #FFF;
  //padding: 0.5em;
  
  div.block-highlight {
    position: absolute;
    z-index: 1;
    pointer-events: none;
    background-color: rgba(0, 128, 255, 0.5);
    border-color: rgba(0, 2*128/3, 2*255/3, 0.5);
    min-width: 5em;
    min-height: 1em;
  }
  
  p {
    //background-color: #EEF;
    padding: 0.15em 0;
    margin: 0.1em 0;
  }
}

.gpc-simpledoc-document {

  background-color: white; 
  border: solid 1px #CCC;
  padding: 0.25em;
}
