doctype html
html
  head
    title SimpleDoc test server
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 Hello SimpleDoc!
    div
      h2 Existing documents:
      table
        tbody(data-bind="foreach: index")
          tr
            td(data-bind="text: tagline")
            td
              button(data-bind="click: load") Load
            td
              button(data-bind="click: remove") Del
      p
        button(data-bind="click: createNewDocument") Create new document
    div
      h2 Current document:
      div(data-bind="gpcSimpleDocEditor: { data: docEditor }")
    p
      button(data-bind="click: saveCurrentDocument") Save currently loaded document
    script(src="/js/main.js")
  